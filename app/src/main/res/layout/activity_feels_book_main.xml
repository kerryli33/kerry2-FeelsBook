<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FeelsBookMainActivity">

        <ImageButton
            android:id="@+id/angry_image3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surprised_image3"
            app:srcCompat="@drawable/angry" />

        <ImageButton
            android:id="@+id/fear_image3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintStart_toEndOf="@+id/surprised_image3"
            app:layout_constraintTop_toBottomOf="@+id/love_image3"
            app:srcCompat="@drawable/fear" />

        <ImageButton
            android:id="@+id/sad_image3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintStart_toEndOf="@+id/angry_image3"
            app:layout_constraintTop_toBottomOf="@+id/fear_image3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/sad" />

        <ImageButton
            android:id="@+id/surprised_image3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/joy_image5"
            app:srcCompat="@drawable/surprised" />

        <ImageButton
            android:id="@+id/love_image3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toEndOf="@+id/joy_image5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/love" />

        <ImageButton
            android:id="@+id/joy_image5"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="200dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/joy" />

        <EditText
            android:id="@+id/main_comment"
            android:layout_width="339dp"
            android:layout_height="177dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border"
            android:padding="7dp"
            android:hint="@string/add_comment"
            android:gravity = "top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="315dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Swipe right on left side of Screen                                          for Navigation Bar ----------->"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155" />


    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu = "@menu/navigation_menu"
        android:layout_gravity= "start"
        >


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>